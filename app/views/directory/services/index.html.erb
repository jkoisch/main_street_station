<% title 'Services' %>

<table>
  <tr>
    <th>Community Role</th>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
  </tr>
  <% @services.each do |service| %>
    <tr>
      <td><%= service.community_role_id %></td>
      <td><%= service.name %></td>
      <td><%= service.description %></td>
      <td><%= service.address %></td>
      <td><%= link_to 'Show', service %></td>
      <td><%#= link_to 'Edit', edit_service_path(service) %></td>
      <td><%= link_to 'Destroy', service, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%#= link_to 'New Service', new_service_path %></p>
