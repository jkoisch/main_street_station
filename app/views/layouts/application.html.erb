<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", "formtastic" %>
    <%= javascript_include_tag "application", "nested_form" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">
            <ul class="nav">
            <% if user_signed_in? %>
              <li>Logged in as <strong><%= current_user.email %></strong>.</li>
              <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_url(:protocol => "https") %></li>
              <li><%= link_to "Login", new_user_session_url(:protocol => "http") %></li>
              <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                FHIR Conformance Statement
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li><a><%= link_to "View", root_path, :method => :index %></a></li>
                <li><a><%= link_to "Export xml", download_fhir_conformance_index_path(:type => 'xml')%></a></li>
                <li><a><%= link_to "Export json", download_fhir_conformance_index_path(:type => 'json')%></a></li>
              </ul>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
